#!/usr/bin/env just --justfile

# cspell: words justfile

default:
    @just --list --unsorted

# Runs all static code checks
check-code:
    earthly +check-static-analysis
    earthly +check-code-formatting
    earthly +check-license

# Runs unit tests
test-code:
    earthly +test-unit

# Pre Push Checks
pre-push: check-code
