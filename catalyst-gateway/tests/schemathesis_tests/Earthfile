VERSION 0.8

ARG --global REGISTRY="harbor.shared-services.projectcatalyst.io/dockerhub"

package:
    FROM ${REGISTRY}/python:3.12-alpine3.20

    ARG version=3.39.16

    RUN apk add --no-cache gcc musl-dev
    RUN python -m pip install schemathesis==$version
    RUN python -m pip install cbor2
    RUN mkdir /results

    COPY ./hooks/hooks.py .
    COPY entry.sh .

    VOLUME /results

    ENV SCHEMATHESIS_HOOKS hooks

    ENTRYPOINT ["./entry.sh"]

    SAVE IMAGE schemathesis-runner:latest